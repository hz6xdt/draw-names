@model DrawingListModel

<div class="bg-primary m-1 p-1 text-white"><h4>Ready to draw names for: @Model.Drawing.Name?</h4></div>

<table class="table table-sm table-bordered">
    <tr><th>Names</th></tr>
    @foreach (string name in Model.Names)
    {
    <tr>
        <td>@name</td>
    </tr>
    }
</table>

<form asp-action="DrawNames" method="post">
    <button type="submit" class="btn btn-primary">Draw Names</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
